<LinearLayout android:layout_width="380dp"
    android:layout_height="300dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <TextView
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:text="Forgot Password Page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Enter EmailID:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/fmail"
            android:layout_marginLeft="5dp"
            android:hint="Enter EmailID to reset password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>
<Button
    android:id="@+id/fsend"
    android:text="Send Verification Mail"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
<TextView
    android:id="@+id/fgtstatus"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

</LinearLayout>